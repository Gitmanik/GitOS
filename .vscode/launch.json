{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB QEMU",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/gdb",
            "cwd": "${workspaceRoot}",
            "args": [],
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "file /workspaces/GitOS/build/kernel.elf",
                    "description": "Load ELF."
                },
                {
                    "text": "break kernel_halt",
                    "description": "Break when kernel is halting."
                }
            ],
            "preLaunchTask": "Run QEMU",
            "externalConsole": false
        },
        {
            "name": "GDB Bochs",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/gdb",
            "cwd": "${workspaceRoot}",
            "args": [],
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "file ${workspaceRoot}/bin/kernel.elf",
                    "description": "Load ELF."
                },
                {
                    "text": "break kernel_halt",
                    "description": "Break when kernel is halting."
                }
            ],
            "preLaunchTask": "Launch BOCHS",
            "externalConsole": false
        }
    ]
}