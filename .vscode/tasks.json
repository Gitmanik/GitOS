{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: Make disk",
			"command": "build",
			"targets": [
				"make_disk"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run QEMU",
			"command": "${workspaceRoot}/scripts/run_in_qemu.sh ./build/disk.bin",
			"dependsOn": "CMake: Make disk",
		},
		{
			"type": "shell",
			"label": "Run BOCHS",
			"command": "${workspaceRoot}/scripts/run_in_bochs.sh",
			"isBackground": true,
			"dependsOn": "CMake: Make disk",
			"problemMatcher": [
				{
				  "pattern": [
					{
					  "regexp": ".",
					  "file": 1,
					  "location": 2,
					  "message": 3
					}
				  ],
				  "background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": ".",
				  }
				}
			]
		},
	]
}